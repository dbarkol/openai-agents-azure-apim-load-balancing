<policies>
    <inbound>
        <base />
        
        <!-- 
            Use the backend pool with native session affinity enabled
            
            * APIM will automatically handle session routing based on APIM-Backend-Affinity cookie
            * No custom routing logic needed - let APIM handle it natively
        -->
        <set-backend-service backend-id="openai-v1-backend" />

        <!--          
            Authentication and URI Rewriting
            
            * Remove incoming api-key header
            * Use Azure Managed Identity to authenticate with Cognitive Services
            * Rewrite URI to proper Azure OpenAI endpoint structure
        -->
        <set-header name="api-key" exists-action="delete" />
        <authentication-managed-identity resource="https://cognitiveservices.azure.com" />        
        <rewrite-uri template="/v1/responses" />
        
    </inbound>
    <backend>
        <base />
    </backend>
    <outbound>
        <base />    
        <!--         
            Debug headers for monitoring session affinity (simplified)
        -->
        <set-header name="X-Backend-Pool" exists-action="override">
            <value>openai-v1-backend</value>
        </set-header>
        <set-header name="X-Request-ID" exists-action="override">
            <value>@(context.RequestId.ToString())</value>
        </set-header>
        
        <!-- Show routing decision for debugging -->
        <set-header name="X-Routing-Decision" exists-action="override">
            <value>native-session-affinity</value>
        </set-header>
        
    </outbound>
    <on-error>
        <base />
    </on-error>
</policies>